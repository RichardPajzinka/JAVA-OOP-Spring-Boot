package com.project.learnspring;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

//record - nepotrebujeme getter alebo setter toto sa pou≈æiva od novej javy
record Person(String name, int age) {
};

record Address(String firstLine, String city) {
};

@Configuration
public class SpringConfigurationClass {

	@Bean
	public String name() {
		return "Richard";
	}

	@Bean
	public int age() {
		return 24;
	}

	@Bean
	public Person person() {
		return new Person("Richard", 24);
		// return person;
	} 
	
	@Bean(name = "address2")
	public Address address() {
		return new Address("Blatna 29", "Rozhanovce");
		// return person;
	}

}
